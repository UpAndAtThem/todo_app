<ul id="lists">
  <% @lists.each_with_index do | list, index| %>
    <li class="<%= "complete" if all_todos_complete? list[:todos] %>">
      <a href="/lists/<%= index %>">
        <h2><%= list[:name]%></h2>
        <p><%= uncompleted_todos_count list %></p>
      </a>    
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">New List</a>
<% end %>