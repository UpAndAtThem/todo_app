<ul id="lists">
  <% sort_lists(@lists) do |list| %>
    <li class="<%= "complete" if list_completed? list %>">
      <a href="/lists/<%= list[:id] %>">
        <h2><%= list[:name]%></h2>
        <p><%= uncompleted_todos_count list %></p>
      </a>    
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">New List</a>
<% end %>