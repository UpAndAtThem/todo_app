<section id="todos">
  <header>
    <h2><%= @list[:name] %></h2>
    <ul>
      <li>
        <a class="edit" href="/lists/<%= @list_id %>/edit_list">edit list</a>        
      </li>
    </ul>
  </header>

  <ul>
    <% @list[:todos].each_with_index do |todo, index| %>
      <li class="<%= "complete" if todo[:completed] %>">
        <form action="/lists/<%= params['list_id']%>/todos/<%= index%>/complete_todo" method="post" class="check">
           <input type="hidden" name="completed" value="true" />
           <button type="submit">Complete</button>
        </form>

        <h3 class="<%= index %>"><%= todo[:name]%></h3>
        <form action="/lists/<%= params['list_id'] %>/todos/<%= index %>/delete_todo" method="post" class="delete">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% end %>
  </ul>
</section>

<form action="/lists/<%= @list_id %>/todos" method="post">
  <dl>
    <dt>
      <label for="todo">Enter a new todo item:</label>
    </dt>
    <dd>
      <input name="todo" id="todo" placeholder="Something to do" type="text" value="<%= params[:todo] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
  </fieldset>
</form>

<% content_for :header_links do %>
  <a class="list" href="/lists">All Lists</a>
<% end %>
